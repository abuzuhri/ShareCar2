<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#e6e6e6" />
            <gradient android:angle="-90" android:startColor="#e6e6e6"
                android:endColor="#e6e6e6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#e6e6e6" />
            <solid android:color="#e6e6e6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#ff9d1e" />
            <gradient android:angle="-90" android:startColor="#ff9d1e"
                android:endColor="#ff9d1e" />
        </shape>
    </item>
</selector>
