<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sharearide.com.orchidatech.jma.sharearide.Activity.Login"
    android:background="@drawable/ic_background">



    <!--<include layout="@layout/toolbar"
        android:id="@+id/tool_bar"/>-->



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_marginTop="@dimen/vertical_logoTop"
        android:layout_marginBottom="@dimen/vertical_logoBottom"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_email"
        android:hint="Enter Email"
        android:textColorHint="#bbbbbb"
        android:layout_below="@+id/logo"
        android:padding="@dimen/ed_padding"
        android:textColor="#30d5e8"
        android:textSize="@dimen/text_size"
        android:textDirection="ltr"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:drawableLeft="@drawable/ed_email"
        android:drawablePadding="10dip"
        android:background="@drawable/lightgray_roundrect"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginLeft="@dimen/horizontal_margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_password"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#bbbbbb"
        android:textColor="#30d5e8"
        android:padding="@dimen/ed_padding"
        android:layout_below="@+id/ed_email"
        android:textSize="@dimen/text_size"
        android:textDirection="ltr"
        android:drawableLeft="@drawable/ed_password"
        android:drawablePadding="10dip"
        android:imeOptions="actionGo"
        android:background="@drawable/lightgray_roundrect"
        android:layout_marginBottom="30px"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginLeft="@dimen/horizontal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_button"
        android:orientation="horizontal"
        android:layout_below="@+id/ed_password"
        android:layout_marginBottom="20px"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginLeft="@dimen/horizontal_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fBbtn"
            android:layout_gravity="center_vertical"
            android:background="@drawable/facebook"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gplusbtn"
            android:layout_gravity="center_vertical"
            android:background="@drawable/googlepluse"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gobtnx"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/horizontal_BTW_Btn"
            android:background="@drawable/login" />



    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_below="@+id/img_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="3dp"
        android:id="@+id/request_signup"
        android:layout_below="@+id/img_button"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a member? "
            android:id="@+id/textView2"
            android:textColor="#fff"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"
            android:id="@+id/signUpbtn" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lost password? "
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:textSize="@dimen/text_size"
        android:gravity="center_horizontal"
        android:id="@+id/resetPwbtn"
        android:padding="3dp"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_below="@+id/request_signup"/>

</RelativeLayout>
