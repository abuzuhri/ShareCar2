<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sharearide.com.orchidatech.jma.sharearide.Main"
    android:orientation="vertical"
    android:background="@drawable/backgro">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo"
        android:layout_marginTop="@dimen/vertical_logoTop"
        android:layout_marginBottom="@dimen/vertical_logoBottom"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dots"
        android:layout_marginTop="@dimen/vertical_margintopTextView"
        android:layout_marginBottom="@dimen/vertical_margin_btwn_view"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/blueText"
        android:id="@+id/login"
        android:gravity="center"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:background="@drawable/roundedbtn"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/vertical_margin_btwn_view" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a Ride"
        android:textColor="@color/whiteText"
        android:background="@drawable/blue_roundedbtn"
        android:id="@+id/find_ride_btn"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/vertical_margin_btwn_view"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offer a Ride"
        android:textColor="@color/whiteText"
        android:background="@drawable/blue_roundedbtn"
        android:id="@+id/offer_btn"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin" />

</LinearLayout>

