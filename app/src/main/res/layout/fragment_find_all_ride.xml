<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sharearide.com.orchidatech.jma.sharearide.Fragment.FindAllRide"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context="sharearide.com.orchidatech.jma.sharearide.Activity.Search">

        <include layout="@layout/mytoolbar"
            android:id="@+id/tool_bar"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/t"

            android:layout_toLeftOf="@+id/v"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/v"
            android:src="@drawable/toolbar_find"
            android:background="@color/ColorPrimary"

            android:layout_above="@+id/rv"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:layout_marginBottom="170dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tool_bar"/>


    </RelativeLayout>

</LinearLayout>
