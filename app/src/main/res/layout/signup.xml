<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sharearide.com.orchidatech.jma.sharearide.Activity.Signup"
    android:orientation="vertical"
    android:background="#fff">

    <include layout="@layout/toolbar"
        android:id="@+id/tool_bar"/>


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/tool_bar"
        android:id="@id/scrollView"
        android:paddingBottom="60dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:padding="10dp"
                android:textDirection="ltr"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:drawableLeft="@drawable/profile"
                android:textColorHint="#bbbbbb"
                android:drawablePadding="10dip"
                android:layout_marginTop="@dimen/vertical_margintopPage"
                android:background="@drawable/lightgray_roundrect"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginLeft="@dimen/horizontal_margin"/>




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:hint="Password"
                android:padding="10dp"
                android:textDirection="ltr"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:textColorHint="#bbbbbb"
                android:drawableLeft="@drawable/padlocknav"
                android:drawablePadding="10dip"
                android:layout_marginTop="@dimen/vertical_margin_btwn_view"
                android:background="@drawable/lightgray_roundrect"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginLeft="@dimen/horizontal_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/re_password"
                android:hint="Retype Password"
                android:padding="10dp"
                android:textDirection="ltr"
                android:inputType="textPassword"
                android:textColorHint="#bbbbbb"
                android:imeOptions="actionNext"
                android:drawableLeft="@drawable/padlocknav"
                android:drawablePadding="10dip"
                android:layout_marginTop="@dimen/vertical_margin_btwn_view"
                android:background="@drawable/lightgray_roundrect"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginLeft="@dimen/horizontal_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:hint="Email"
                android:padding="10dp"
                android:textDirection="ltr"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/symbol"
                android:textColorHint="#bbbbbb"
                android:drawablePadding="10dip"
                android:layout_marginTop="@dimen/vertical_margin_btwn_view"
                android:background="@drawable/lightgray_roundrect"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginLeft="@dimen/horizontal_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:hint="Phone"
                android:padding="10dp"
                android:textDirection="ltr"
                android:textColorHint="#bbbbbb"
                android:imeOptions="actionGo"
                android:inputType="phone"
                android:drawableLeft="@drawable/phoneblue"
                android:drawablePadding="10dip"
                android:layout_marginTop="@dimen/vertical_margin_btwn_view"
                android:background="@drawable/lightgray_roundrect"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginLeft="@dimen/horizontal_margin"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/whiteText"
        android:background="@drawable/yallow_roundrect"
        android:id="@+id/register"
        android:layout_alignParentBottom="true"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_progress"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
