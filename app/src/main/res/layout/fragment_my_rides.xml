<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

<include layout="@layout/toolbar"
    android:id="@+id/tool_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrollView">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginTop="@dimen/vertical_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginBottom="@dimen/date_marginTop"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView6"
                android:background="@drawable/city_icon"
                android:layout_gravity="left|center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"></LinearLayout>
            <EditText
                android:id="@+id/cityFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="City"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_weight="0.8" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firstlocation_lat_long"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:background="@drawable/marker_kml_point"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageVieew6"
                android:background="@drawable/country_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/countryFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/statefgg"
                android:background="@drawable/flagg"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/stateFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imagew6"
                android:background="@drawable/time_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/vertical_margin">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/aa"
                android:background="@drawable/date_icon"
                android:layout_gravity="left|center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"></LinearLayout>
            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViews"
            android:background="@drawable/line"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginBottom="@dimen/vertical_margin"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:id="@+id/textView1"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageVie5"
                android:background="@drawable/city_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/cityTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="City"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_weight="0.8"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/secondlocation_lat_long"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:background="@drawable/marker_kml_point"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageV6"
                android:background="@drawable/country_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/countryTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/dfd"
                android:background="@drawable/flagg"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/stateTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ss"
                android:background="@drawable/price"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="number"
                android:imeOptions="actionNext"
                />



        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Information"
            android:id="@+id/more_info"
            android:background="@drawable/cyan_roundrect"
            android:gravity="center"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/vertical_margintopTextView"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:textStyle="bold"
            android:textColor="@color/whiteText"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageVdiews"
            android:background="@drawable/line"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginBottom="@dimen/vertical_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact Info"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:id="@+id/td1"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/vertical_margintopTextView"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageccVie5"
                android:background="@drawable/user_icon"
                android:layout_gravity="left|center"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:text="Username"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/vertical_margintopTextView"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageddV6"
                android:background="@drawable/phoneblue"
                android:layout_gravity="left|center"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Nimber"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/vertical_margintopTextView"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/sss"
                android:background="@drawable/email_icon"
                android:layout_gravity="left|center"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_gravity="left|bottom"
                android:padding="8dp"
                android:editable="false"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                />



        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:background="#ff9d1e"
        android:gravity="center"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="0dp"
        android:textStyle="bold"
        android:textColor="@color/whiteText"

        />
</LinearLayout>
