<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginTop="@dimen/vertical_margin"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginBottom="@dimen/date_marginTop"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView6"
                android:background="@drawable/city_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   City"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imagaew6"
                android:background="@drawable/flagg"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   State"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageVieew6"
                android:background="@drawable/country_icon"
                android:layout_gravity="left|center"/>


            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   Country"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/vertical_margin">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imagew6"
                android:background="@drawable/time_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   Time"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViews"
            android:background="@drawable/line"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginBottom="@dimen/vertical_margin"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:id="@+id/textView1"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageVie5"
                android:background="@drawable/city_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/city1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   City"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imagae"
                android:background="@drawable/flagg"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/state2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   State"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/horizontal_marginLeft"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageV6"
                android:background="@drawable/country_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/country1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   Country"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/vertical_margintopTextView"
            android:layout_marginBottom="@dimen/date_marginTop">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imasgew6"
                android:background="@drawable/date_icon"
                android:layout_gravity="left|center"/>

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   Date"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textDirection="ltr"
                android:background="#fff"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:imeOptions="actionDone"
                />

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:id="@+id/search"
            android:background="#ff9d1e"
            android:gravity="center"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginBottom="0dp"
            android:textStyle="bold"
            android:textColor="@color/whiteText"
            />

    </LinearLayout>
</ScrollView>